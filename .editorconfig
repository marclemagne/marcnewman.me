# https://editorconfig.org/

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Preserve trailing spaces in Markdown, which can affect formatting
[*.md]
trim_trailing_whitespace = false
